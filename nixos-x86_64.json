{
  "builders": [
    {
      "boot_wait": "30s",
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "shutdown -h now",
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_port": 22,
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "iso_url": "https://d3g5gsiof5omrk.cloudfront.net/nixos/17.09/nixos-17.09.2281.b4a0c011e81/nixos-minimal-17.09.2281.b4a0c011e81-x86_64-linux.iso",
      "iso_checksum": "d50856afa2c86faf68cd725db027b58db82ee23c48f6c18932a847013fa9fae0",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/install.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "nixbox-17.09-workstation-{{.Provider}}.box"
      }
    ]
  ]
}
